<Window x:Class="CheckBox_Флажок_.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CheckBox_Флажок_"
        mc:Ignorable="d"
        Title="MainWindow" Height="120" Width="180">
    <Grid>
        <StackPanel x:Name="staxkPanek">
            <CheckBox x:Name="CheckBox1" IsThreeState="True" IsChecked="False" Height="20" Content="Неотмечено" Checked="CheckBox1_Checked"/>
            <CheckBox x:Name="CheckBox2" IsThreeState="True" IsChecked="True" Height="20" Content="Отмечено"/>
            <CheckBox x:Name="CheckBox3" IsThreeState="True" IsChecked="{x:Null}" Height="20" Content="Неопределено"/>
            
        </StackPanel>
        
    </Grid>
</Window>
